        <script >
            var position = $(window).scrollTop();
            $(window).scroll(function () {
                var scroll = $(window).scrollTop();
                if(scroll > position) {
                    if ($(window).scrollTop() + $(window).height() > parseInt($('.b-footer').offset().top)) {
                        $("html, body").animate({ scrollTop: 0 }, "slow");
                        $('#modalInformationRead').modal('show');
                    }
                }
                position = scroll;
            });
        </script>
    {% endif %}
