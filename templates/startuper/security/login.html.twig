{% extends 'base-no-header.html.twig' %}

{% trans_default_domain 'startuper' %}

{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block body %}

    <div id="Login" class="row">
        <div class="col-lg-6 px-4 LoginSingUp">
            <header class="header">
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <a class="navbar-brand" href="{{ path("home") }}">
                        <img src="/assets/img/logo.png" >
                    </a>
                </nav>
            </header>
            <div class="card">
                <h3 >{% trans %}Login{% endtrans %}</h3>
                <form id="login" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% include 'partials/_notice.html.twig' %}
                    <div class="form-group">
                        <div class="form-group">
                            <label for="inputEmail">{% trans %}form.email.label{% endtrans %}</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                                   placeholder="{% trans %}formLogin.email.placeholder{% endtrans %}" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">{% trans %}form.password.label{% endtrans %}</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   placeholder="{% trans %}formLogin.password.placeholder{% endtrans %}" required>
                        </div>
                    </div>
                    <div class="custom-container">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck" name="_remember_me">
                            <label class="custom-control-label" for="customCheck">{% trans %}Remember me{% endtrans %}</label>
                        </div>
                        <div class="custom-control1">
                            <a href="{{ path('resetting_request') }}">{% trans %}Forgot your password{% endtrans %} ?</a>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                    </div>

                    <div class="row button-container ">
                        <div class="col-md-12 p-0">
                            <button class="btn btn-h50 btn-w50" type="submit">
                                {% trans %}Login{% endtrans %}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-6 px-4 LoginSingUp">
            <div class="card">
                <h3>{% trans %}Registration{% endtrans %}</h3>
                <p>{% trans %}You are new in PFE Startup? create your account now to be able to access all the features{% endtrans %}</p>
                <a class="btn btn-h50 btn-w50" href="{{ path('startuper_registration') }}">{% trans %}Register{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
