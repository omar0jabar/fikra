{% trans_default_domain 'company' %}

{% block _company_name_widget %}
   <label class="required" for="company_name" data-toggle="tooltip" data-placement="top" title=""
          data-original-title="{% trans %}form.name.placeholder{% endtrans %}">
      {% trans %}form.name.label{% endtrans %} <i class="icon-Lock"></i>
   </label>
   {{ form_widget(form) }}
{% endblock %}

