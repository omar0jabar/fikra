{% extends 'base.html.twig' %}

{% trans_default_domain 'company' %}

{% block title %}{% trans %}Company updated successfully{% endtrans %}{% endblock %}

{% block body %}
   <div class="project-update">
      <div class="container">
         <div class="row justify-content-center">
            <div class="col-md-9 text-center">
               <h1>{% trans %}Company updated successfully{% endtrans %}</h1>
               <p>{% trans %}Your changes are in draft mode{% endtrans %}</p>
               <a class="btn btn-bg-red btn-h50 btn-w15"
                  href="{{ path('startuper_company_dashboard_show', { id: company.id, slug: company.slug}) }}">
