{% extends 'base.html.twig' %}

{% trans_default_domain 'resetting' %}

{% block title %}{% trans %}resetting.request.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="forget-password">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card">
                        <div class="text-center my-5">
                            <h3>{% trans %}resetting.request.title{% endtrans %}</h3>
                        </div>
                        <div class="card-body">
                            {% for label, messages in app.flashes %}
                                <div class="alert alert-{{ label }}">
                                    {% for message in messages %}
                                        <p>{{ message | raw }}</p>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            {{ form_start(form) }}
                            {{ form_row(form.email) }}
                            <button type="submit" class="btn btn-bg-red btn-h50 btn-w35">
                                {% trans %}resetting.request.btn{% endtrans %}
                            </button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}