{% extends 'bundles/SonataAdmin/standard_layout.html.twig' %}

{% trans_default_domain 'admin' %}

{% block sonata_admin_content %}

    {% block notice %}
        {% include '@SonataCore/FlashMessage/render.html.twig' %}
    {% endblock notice %}

    {% set admin = app.user %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4>{% trans %}Update password{% endtrans %}</h4>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_row(form.currentPassword) }}
                    {{ form_row(form.newPassword) }}
                    {{ form_row(form.confirmPassword) }}
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-check"></i>
                        {% trans %}Update password{% endtrans %}
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}