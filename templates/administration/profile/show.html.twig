{% extends 'bundles/SonataAdmin/standard_layout.html.twig' %}

{% trans_default_domain 'admin' %}

{% block sonata_admin_content %}

    {% block notice %}
        {% include '@SonataCore/FlashMessage/render.html.twig' %}
    {% endblock notice %}

    {% set admin = app.user %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4>{% trans %}Your profile{% endtrans %}</h4>
                </div>
                <div class="box-body">
                    <table class="table">
                        <tr>
                            <th>{% trans %}form.avatar.label{% endtrans %}</th>
                            <td>
                                {% include 'partials/_avatar.html.twig' with {'object': admin} %}
                            </td>
                        </tr>
                        <tr>
                            <th>{% trans %}form.full_name.label{% endtrans %}</th>
                            <td>{{ admin.fullName }}</td>
                        </tr>
                        <tr>
                            <th>{% trans %}form.birthday.label{% endtrans %}</th>
                            <td>{{ admin.birthday|date('d M Y') }}</td>
                        </tr>
                        <tr>
                            <th>{% trans %}form.email.label{% endtrans %}</th>
                            <td>{{ admin.email }}</td>
                        </tr>
                        <tr>
                            <th>{% trans %}form.address.label{% endtrans %}</th>
                            <td>{{ admin.address }}</td>
                        </tr>
                        <tr>
                            <th>{% trans %}form.created_at.label{% endtrans %}</th>
                            <td>{{ admin.createdAt|date('d M Y') }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}