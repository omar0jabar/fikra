{% trans_default_domain 'footer' %}
<footer class="b-footer">
    <div class="b-footer__contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-6 b-links">
                    <div class="b-footer__contact--startupers">
                        <h4>{% trans %}Startupers{% endtrans %}</h4>
                        <ul>
                            <li>
                                <a href="{{ path('submit_project_index') }}">
                                    {% trans %}Submit your project{% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('services', { actor: 'startupers'}) }}">
                                    {% trans %}Startupers services{% endtrans %}
                                </a>
                            </li>
                            <li><a href="{{ path('comment_ca_marche', { actor: 'startupers'}) }}">
                                    {% trans %}How it works{% endtrans %}</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 b-links">
                    <div class="b-footer__contact--investisseurs">
                        <h4>{% trans %}Investors{% endtrans %}</h4>
                        <ul>
                            <li>
                                <a href="{{ path('project_list') }}">
                                    {% trans %}Discover the projects{% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('services', { actor: 'investisseurs'}) }}">
                                    {% trans %}Investors services{% endtrans %}
                                </a>
                            </li>
                            <li><a href="{{ path('comment_ca_marche', { actor: 'investisseurs'}) }}">
                                    {% trans %}How it works{% endtrans %}</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 b-links">
                    <div class="b-footer__contact--planDuSite">
                        <h4>{% trans %}Sitemap{% endtrans %}</h4>
                        <ul>
                            <li><a href="{{ path('about_us') }}">{% trans %}About us{% endtrans %}</a></li>
                            <li><a href="{{ path('project_list') }}">{% trans %}Projects{% endtrans %}</a></li>
                            <li><a href="{{ path("cmsbundle_article_list") }}">{% trans %}Actus{% endtrans %}</a></li>
                            <li><a href="{{ path('contact') }}">{% trans %}Contact{% endtrans %}</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 b-links">
                    <div class="b-footer__contact--legal">
                        <h4>{% trans %}Legal notice{% endtrans %}</h4>
                        <ul>
                            <li>
                                <a href="{{ path('cgu') }}">
                                    {% trans %}CGU{% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('engagement') }}">
                                    {% trans %}PI engagement{% endtrans %}
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="b-footer__contact--socials">
                        <h4>{% trans %}Social networks{% endtrans %}</h4>
                        <ul>
                            <li>
                                <a href="{{ facebookLink }}" {% if facebookLink != '#' %}target="_blank"{% endif %}>
                                    <i class="icon-facebook-logo"></i>
                                </a>
                            </li>
                            <li>
                                <a href="{{ linkedInLink }}" {% if linkedInLink != '#' %}target="_blank"{% endif %}>
                                    <i class="icon-Linkedin"></i>
                                </a>
                            </li>
                            <li>
                                <a href="{{ youtubeLink }}" {% if youtubeLink != '#' %}target="_blank"{% endif %}>
                                    <i class="icon-Youtube"></i>
                                </a>
                            </li>
                            <li>
                                <a href="{{ twitterLink }}" {% if twitterLink != '#' %}target="_blank"{% endif %}>
                                    <i class="icon-twitter-logo-on-black-background"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 b-logo">
                    <div class="b-footer__contact--flowingo">
                        <a href="{{ path('home_default') }}">
                            <img src="{{ asset('assets/img/FLowingo_Color_inverted.svg') }}"
                                 alt="PFE Startup" title="PFE Startup">
                        </a>
                    </div>
                </div>
                    <div class="col-lg-12 col-md-6 b-footer__bottomline">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4 copyright">
                                    <p>&copy; {% trans %}Copyright 2019 PFE Startup{% endtrans %}</p>
                                </div>
                                <div class="col-lg-4 realisation">
                                    <p>
                                        {% trans %}Powered{% endtrans %}
                                        <a href="https://www.pfestartup.com" class="egio" target="_blank" title="PFE Startup">
                                            Mohamed RAFYQ
                                        </a>
                                        -
                                        <a href="https://www.pfestartup.com" class="egio" target="_blank" title="PFE Startup">
                                            Faical Ait Lahcen Ouhmad
                                        </a>
                                        -
                                        <a href="https://www.pfestartup.com" class="egio" target="_blank" title="PFE Startup">
                                            Kamal NAIM
                                        </a>
                                    </p>
                                </div>
                                <div class="col-lg-4"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</footer>
