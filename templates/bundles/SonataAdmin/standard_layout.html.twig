{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block side_bar_before_nav %}
    <ul class="sidebar-menu" data-widget="tree">
        {% set route = app.request.get('_route') %}
        {% set current_menu = "" %}
        {% if route == "sonata_admin_dashboard" %}
            {% set current_menu = "Dashboard" %}
        {% endif %}
        <li class="treeview {% if current_menu == "Dashboard" %} active {% endif %}">
            <a href="{{ path('sonata_admin_dashboard') }}">
               <i class="fa fa-dashboard"></i> Dashboard
            </a>
        </li>
    </ul>
{% endblock %}

{% block sonata_top_nav_menu_user_block %}
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-cog"></i>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
        </a>
        <ul class="dropdown-menu">
            {% include 'bundles/SonataAdmin/Core/parameter_block.html.twig' %}
        </ul>
    </li>
    <li class="dropdown user-menu">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            {% set object = app.user %}
            {% include 'partials/_avatar-mini.html.twig' with {'object': object} %}
            <i class="fa fa-caret-down" aria-hidden="true"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
            {% include get_global_template('user_block') %}
        </ul>
    </li>
{% endblock %}