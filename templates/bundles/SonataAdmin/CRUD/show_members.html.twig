{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
   {% if object.teamMembers|length > 0 %}
         {% for member in object.teamMembers %}
            <div class="row">
            <div class="col-md-1">
               {% if member.photo %}
                  {% set picture = vich_uploader_asset(member, 'imageFile') %}
               {% else %}
                  {% set picture = '/upload/users/empty.jpg' %}
               {% endif %}
               <img src="{{ picture }}" alt="" class="avatar avatar-medium">
            </div>
            <div class="col-md-8">
               <h4><a href="#">{{ member.fullName }}</a></h4>
               <div class="row">
                  <div class="col-md-6">
                     <p><strong>{{ member.position }}</strong></p>
                  </div>
                  <div class="col-md-6 text-right">
                     {% if member.cv %}
                        <a href="#">Cv de {{ member.fullName }}</a>
                     {% endif %}
                  </div>
               </div>
               <div class="w-100">
                  <p>{{ member.biography }}</p>
                  {% if member.linkedin %}
                     {% set link = member.linkedin %}
                     {% else %}
                        {% set link = "#" %}
                  {% endif %}
                  <a href="{{ link }}" target="_blank">Linkedin</a> |
                  {% if member.twitter %}
                     {% set link = member.twitter %}
                  {% else %}
                     {% set link = "#" %}
                  {% endif %}
                  <a href="{{ link }}" target="_blank">Twitter</a> |
                  {% if member.facebook %}
                     {% set link = member.facebook %}
                  {% else %}
                     {% set link = "#" %}
                  {% endif %}
                  <a href="{{ link }}" target="_blank">Facebook</a>
               </div>
            </div>
            </div>
            <hr>
         {% endfor %}
   {% else %}
      <p>Aucun member</p>
   {% endif %}
{% endblock field %}