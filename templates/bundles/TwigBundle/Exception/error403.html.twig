{% block body %}

   <div class="access-ignored">
      <div class="container">
         <div class="content-wrapper">
            <h1>
               403
               <span>{% trans %}Vous n'avez pas le droit d'accéder a cette ressource ?{% endtrans %}</span>
            </h1>
            <p class="intro">
               {% trans %}Vous n'avez pas le droit d'accéder a cette resource !{% endtrans %}
            </p>
            <a href="{{ path('home') }}" class="btn btn-bg-red btn-h50 btn-w35">
               {% trans %}Back to Home{% endtrans %} <i class="icon-right-arrow"></i>
            </a>
         </div>
      </div>
   </div>

{% endblock %}