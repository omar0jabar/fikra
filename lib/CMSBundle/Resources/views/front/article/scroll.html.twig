{% trans_default_domain 'article' %}
{% if countResults == 0 %}
	{% set res = 'No result found'|trans %}
{% else %}
	{% set count = countResults %}
	{% set text = 'Results'|trans %}
	{% set res = count ~ ' ' ~ text %}
{% endif %}
<script>
	$('#more').val({{ more }});
	$('#countResults').html('<strong>{{ res }}</strong>');
</script>

{% if pagination|length > 0 %}
	{% for article in pagination %}
		{% include '@CMS/front/article/_card.html.twig' %}
	  <br>
	{% endfor %}
{% endif %}

