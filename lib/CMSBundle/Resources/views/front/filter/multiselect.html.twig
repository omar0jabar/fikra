<input type="hidden" name="categ" id="categ" value="{{ categ|join(',') }}">
<div class="row">
    <form method="get">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-8" >
                    <div class="button-group">
                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                            <span class="">select Categories</span>
                        </button>
                        <ul class="dropdown-menu">
                            {% for category in allCategories %}
                                <li>
                                    <a  class="small" data-value="{{ category.id }}" tabIndex="-1">
                                        <input name="category[]"
                                              {% if category.id in categ %}
                                                  checked
                                              {% endif %}
                                               type="checkbox" value="{{ category.id }}"/>&nbsp;
                                        {{ category.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary"> <i class="fas fa-search"></i></button>
                </div>
            </div>

        </div>
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
